{% extends 'layout.html.twig' %}

{% block title %}Project nÂ°{{ project.id }}{% endblock %}

{% block main %}
    <h1>Project : {{ project.name }}</h1>

    <table class="table details-table table-bordered table-dark">
        <caption>Project Details</caption>
        <thead>
            <tr>
            <th colspan="1" scope="col">#</th>
            <td colspan="3" scope="col">{{ project.id }}</td>                 
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="col">Name</th>
            <td scope="row">{{ project.name }}</td>            
            </tr>

            <tr>
            <th scope="col">Description</th>
            <td scope="row">{{ project.description}}</td>            
            </tr>

            <tr>
            <th scope="col">Creation date</th>
            <td scope="row">{{ project.createdAt|date("D, F, Y") }}</td>            
            </tr>

            <tr>
            <th scope="col">Updates Amount</th>
            <td scope="row">{{ project.updates | length}}</td>            
            </tr>

            <tr>
            <th scope="col">Last Update</th>
            <td scope="row"></td>            
            </tr>

            <tr>
            <th scope="col">Github Repository</th>            
            <td scope="row">
                {% if project.gitLink %}
                    <a href="{{ project.gitLink }}">Github</a>
                {% endif %}
            </td>
            </tr>

        </tbody>
    </table>


    
    <div id="Carousel" class="carousel slide" data-ride="carousel">        
        <div class="project-photos carousel-inner">
            {% for image in project.images %}                
                <div class="carousel-item {{ loop.index is same as 1 ? 'active' }}">
                    <img src="{{ asset( image.path ) }}" alt="slide {{ loop.index }}">
                </div>        
            {% endfor %}

            <a class="carousel-control-prev" href="#Carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#Carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>        
        </div>
    </div>    
{% endblock %}